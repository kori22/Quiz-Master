<div class="main-content">
	<div class="row">
    <!--Responsive table-->
	    <div class="col-sm-12">
	      <div class="widget widget-fullwidth widget-small">
	        <div class="widget-head">
	          <div class="tools"><%= link_to t(:new_answer), new_subject_answer_path, class: "btn btn-primary btn-sm" %></div>
	          <div class="title"><%= t(:list_answer) %></div>
	        </div>
	        
	        <div class="table-responsive">
	          <table class="table table-striped table-fw-widget table-hover">
	            <thead>
	              <tr>
	              	<th><%= t(:no) %></th>
	              	<th><%= t(:username) %></th>
	                <th><%= t(:subject) %></th>
	                <th><%= t(:score) %></th>
	                <th><%= t(:show) %></th>
	              </tr>
	            </thead>
	            
	            <tbody class="no-border-x">
	              <%= render 'data_list', answers: @answers %>
	            </tbody>
	          </table>
	        </div>
	      </div>
	    </div>
	</div>
</div>