<div class="main-content">
	<div class="row">
	    <div class="col-sm-12">
	      <div class="panel panel-default">
	        <div class="panel-heading">
	          <h3><%= t(:new_question) %></h3>
	          <% if flash[:error].present? %>
				  <div class="alert alert-danger alert-block">
				    <a class="close" data-dismiss="alert" href="javascript:void(0)">Ã—</a>
				    <h4 class="alert-heading">Error!</h4>
				    <ul>
				    	<% if flash[:error].class == 'Array' %>
						    <% flash[:error].each do |message| %>
						    	<li><%= message %></li>
						    <% end %>
						<% else %>
							<li><%= flash[:error].first %></li>
						<% end %>
				    </ul>
				  </div>
			  <% end %>

	        </div>
	        <div class="panel-body">
	          <%= form_for(question, url: (params[:action] == "new" ? subject_questions_path(params[:subject_id]) : subject_question_path(params[:subject_id], params[:id]))) do |f| %>
	          	<div class="col-sm-12">
		            <div class="form-group">
		              <label><%= t(:question) %></label>
		              
		              <%= f.text_area :question, class: "html-editor", placeholder: t(:question), required: true %>
		            </div>

		            <div class="form-group">
		              <label><%= t(:answer) %></label>
		              <%= f.text_field :answer, class: "form-control", placeholder: t(:answer), required: true %>
		            </div>

		            
		            
		            <div class="spacer text-right">
		              <%= f.submit t(:submit), class: "btn btn-space btn-primary" %>
		              <button class="btn btn-space btn-default">Cancel</button>
		            </div>
		        </div>
	          <% end %>
	        </div>
	      </div>
	    </div>
	    
	</div>
</div>

